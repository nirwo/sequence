{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./static/js/dist",
        "rootDir": "./static/js",
        "lib": ["DOM", "ES2020"]
    },
    "include": ["static/js/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
